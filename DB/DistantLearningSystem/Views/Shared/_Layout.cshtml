@using DistantLearningSystem.Models.LogicModels.Managers
@{
    ViewBag.Title = "Энциклопедия";
    var user = DataManager.DefineUser(Context);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/Icons/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/Images/Icons/favicon.png" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/Main/SharedStyles")
    @Styles.Render("~/bundles/ControlPanelStyles")
    @RenderSection("Styles", false)
</head>
<body>
    <header class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a id="logo" class="pull-left" href="/"></a>
                <div class="nav pull-right" style="margin-top:0">
                    <ul class="nav">
                        @if (user == null)
                        {
                            <li><a href="@Url.Action("Login", "User")">Вход</a></li>
                        }
                        else
                        {
                             <li><a href="@Url.Action("ProfileInfo", "User")">Профиль</a></li>
                             <li><a href="@Url.Action("Logout", "User")">Выход</a></li>
                        }
                        <li><a href="@Url.Action("Index","Home")">Главная</a></li>
                        <li><a href="@Url.Action("Universities","Search")">Поиск</a></li>
                        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">База</a>
                            <ul class="dropdown-menu">
                                
                                <li><a href="@Url.Action("Classifications", "Search")">Классификации</a></li>
                                <li><a href="@Url.Action("Concepts", "Search")">Понятия</a></li>
                                <li><a href="@Url.Action("Sources", "Search")">Источники</a></li>
                            </ul>

                        </li>
                        <li><a href="@Url.Action("Index","Arbor")">Дерево</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </header>
    <!-- /#wrapper -->
    <div id="wrapper">
        <!-- /.navbar-static-top -->
        <!-- /.navbar-static-side -->
        <div id="page-wrapper">
            @*<div class="row" style="height:10px">
                    <div class="col-lg-12" style="height:10px">
                        <div class="action-buttons">
                            @if (user != null)
                            {
                                @HtmlManager.EditButton(Html.ActionLink("Личный кабинет", "Profile", "User"));
                                @HtmlManager.AddButton(Html.ActionLink("Выход", "Logout", "User"));
                            }
                            else
                            {
                                @HtmlManager.EditButton(Html.ActionLink("Вход", "LogIn", "User"));
                                @HtmlManager.AddButton(Html.ActionLink("Регистрация", "Registration", "User"))
                            }
                        </div>
                    </div>
                </div>*@
            @RenderBody()
        </div>
        <!-- /#page-wrapper -->
    </div>
    @Scripts.Render("~/bundles/DataTablesScripts")
    @Scripts.Render("~/bundles/ControlPanelScripts")

    <script>
        $(document).ready(function () {
            $(".thumb").hover(function () {
                $(".bigroundlink .cross").show();
            });
        });
    </script>

    @RenderSection("Scripts", false)
</body>
</html>
