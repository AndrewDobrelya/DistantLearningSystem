@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="hs">Вход</h2>
@HtmlManager.ProccessResultContainer(ViewBag.Result)

<div class="container" style="margin-top:20px;width:100%" id="form">

    <div id="info" style="display: none" class="alert alert-danger">
        <span id="information"></span>
    </div>
    @using (Html.BeginForm("ManageLogIn", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-2" for="LoginOrEmail">Логин или Email</label>
                <div class="col-md-2">
                    <input class="form-control" id="LoginOrEmail" name="LoginOrEmail" type="text" placeholder="Логин" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Password">Пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="Password" name="Password" type="password" placeholder="Пароль" required="required">
                </div>
            </div>

            <div class="form-group" style="margin-top:20px">
                <label class="control-label col-md-2">Кто Вы?</label>
                <div class="col-md-2">
                    <select class="form-control" name="WhoAreU">
                        <option>
                            Студент
                        </option>
                        <option>
                            Преподаватель
                        </option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div style="margin-left: 13.5%">
                    @Html.ActionLink("Регистрация", "Registration", "User")
                </div>
            </div>
            <input type="submit" value="Войти" />
        </div>
    }
</div>
