
<div class="container" style="margin-top:20px;width:100%" id="form">

    @using (Html.BeginForm("ManageStudentRegistration", "User", FormMethod.Post, new { @id = "main_form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Имя</label>
                <div class="col-md-2">
                    <input class="form-control" id="Name" name="Name" type="text" placeholder="Имя" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="LastName">Фамилия</label>
                <div class="col-md-2">
                    <input class="form-control" id="LastName" name="LastName" type="text" placeholder="Фамилия" required="required">
                </div>
            </div>

            @HtmlManager.DropDownList(Html, "Университет", "univer", ViewBag.Universities, selectedValue: 0, onchange: "univerChange()")

            <div class="form-group" style="margin-top:20px">
                <label class="control-label col-md-2">Факультет</label>
                <div class="col-md-2">
                    <select class="form-control" onchange="facultyChange()" id="faculty" name="faculty"></select>
                </div>
            </div>

            <div class="form-group" style="margin-top:20px">
                <label class="control-label col-md-2">Кафедра</label>
                <div class="col-md-2">
                    <select class="form-control" id="department" onchange="departmentChange()" name="department"></select>
                </div>
            </div>
            
            <div class="form-group" style="margin-top:20px">
                <label class="control-label col-md-2">Группа</label>
                <div class="col-md-2">
                    <select class="form-control" id="groupId" name="groupId"></select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Login">Логин</label>
                <div class="col-md-2">
                    <input class="form-control" id="Login" name="Login" type="text" placeholder="Логин" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Email">Email</label>
                <div class="col-md-2">
                    <input class="form-control" id="Email" name="Email" type="text" placeholder="Email" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Password">Пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="Password" name="Password" type="password" placeholder="Пароль" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="ConfirmPassword">Подтвердите пароль</label>
                <div class="col-md-2">
                    <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password" placeholder="Подтвердите пароль" required="required">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Изображение</label>
                <div class="col-md-2">
                    @HtmlManager.ImageUpload()
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @HtmlManager.DefaultButton("submitForm()")
                    @HtmlManager.BackButton(Html.ActionLink("Назад", "LogIn", "User"))
                </div>
            </div>
        </div>
    }
</div>
